node("master") {
    stage("code checkout"){
        git 'git@github.com:saikrishna4293/kube1php.git'
    }
    stage("view files"){
        sh """
        pwd
        ls -l
        """    
    }
    stage("build docker image"){
        sh """
        sudo docker build -t saikrishna4293/phpapp:1.0.${BUILD_NUMBER} .
        sudo docker push saikrishna4293/phpapp:1.0.${BUILD_NUMBER}
        """
    }  
}
